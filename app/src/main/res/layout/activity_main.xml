<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.activities.MainActivity">

    <include
        android:id="@+id/toolbar_main"
        layout="@layout/toolbar_main" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/leaner_inner_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/main_margin"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_select_city"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/select_city_btn_str"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    app:backgroundTint="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/btn_get_location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/get_coordinates_btn_str"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    app:backgroundTint="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/btn_open_map"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/open_map_btn_str"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    app:backgroundTint="@color/colorPrimaryDark" />
            </LinearLayout>

            <EditText
                android:id="@+id/edt_latitude"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/half_main_margin"
                android:backgroundTint="@color/colorPrimaryDark"
                android:digits="1234567890.-"
                android:ems="10"
                android:hint="@string/latitude_hint_str" />

            <EditText
                android:id="@+id/edt_longitude"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/half_main_margin"
                android:backgroundTint="@color/colorPrimaryDark"
                android:digits="1234567890.-"
                android:ems="10"
                android:hint="@string/longitude_hint_str" />

            <Button
                android:id="@+id/btn_clean_fields"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/half_main_margin"
                android:text="@string/clear_coordinates_btn_str"
                android:textColor="#000000"
                android:visibility="gone"
                app:backgroundTint="@color/lightRed"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btn_get_weather"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/half_main_margin"
                android:text="@string/get_weather_btn_str"
                android:textColor="#000000"
                android:visibility="gone"
                app:backgroundTint="@color/lightGreen"
                tools:visibility="visible" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/main_margin"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
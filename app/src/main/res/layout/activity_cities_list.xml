<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CitiesListActivity">

    <include
        android:id="@+id/toolbar_cities_list"
        layout="@layout/toolbar_cities_list">
    </include>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/leaner_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp">

            <Button
            android:id="@+id/list_city_item_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Задать координаты для СПБ"
            android:onClick="setCityLocation"/>

            <Button
                android:id="@+id/list_city_item_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="город 2"
                android:onClick="setCityLocation"/>

        </LinearLayout>

    </ScrollView>




</RelativeLayout>